<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/qrcode_scan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pact41.lastnight.activities.QRCodeScanActivity">

    <EditText
        android:id="@+id/qrcode_scan_party_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom de la soirÃ©e"
        android:inputType="text"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <TextView
        android:id="@+id/qrcode_scan_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/qrcode_scan_info"
        android:textColor="@color/colorPrimary"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/qrcode_scan_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/qrcode_scan_button_content"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/qrcode_scan_info"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/qrcode_saisie_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/qrcode_saisie_button_content"
        android:layout_below="@+id/qrcode_scan_party_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/qrcode_saisie_info"
        android:layout_below="@+id/qrcode_scan_button"
        android:layout_alignParentEnd="true"
        android:textStyle="italic"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="77dp" />

</RelativeLayout>
