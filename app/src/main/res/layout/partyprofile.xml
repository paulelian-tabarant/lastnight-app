<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<ImageView
    android:layout_width="75dp"
    android:layout_height="75dp"
    android:src="@drawable/default_party_picture"
    android:id="@+id/party_picture"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/party_infos"
    android:layout_toRightOf="@id/party_picture"
    android:layout_marginLeft="10dp">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/party_name"
            android:text="@string/party_name"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/party_date"
            android:text="@string/party_date"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/party_place"
            android:text="@string/party_place"/>

    </LinearLayout>
    <ImageView
        android:src="@android:drawable/divider_horizontal_textfield"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:layout_below="@id/party_picture"
        android:contentDescription="Sépare les différentes soirées" />

</RelativeLayout>